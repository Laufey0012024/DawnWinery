@model Winery.Models.winess

@{
    ViewData["Title"] = "Index";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lora:ital@0;1&family=Playfair+Display&display=swap" rel="stylesheet">


<style>
    table, td, th, h1 {
        font-family: 'Lora', serif;
        font-family: 'Playfair Display', serif
    }

    table {
        border-collapse: collapse;
        background-color: #ffbd59;
        width: 100%;
    }

    td, th {
        border: 1px solid gold;
        text-align: left;
        padding: 8px;
    }

    a {
        color: black;
        text-decoration: none;
    }

    button {
        justify-content: left;
    }
</style>


<h1>Wine Cellar</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Add New Wine</a>
</p>

<form asp-controller="Wines" asp-action="Index" method="get">
    <p>

        <select asp-for="WineGenre" asp-items="Model.WinGen">
            <option value="">All</option>
        </select>

        Wine Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Wineis[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wineis[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wineis[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wineis[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wineis[0].Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wineis[0].Vintage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wineis[0].WineSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wineis[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wineis[0].WinePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Wineis) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vintage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WineSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinePrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WineId" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WineId" class="btn btn-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WineId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
