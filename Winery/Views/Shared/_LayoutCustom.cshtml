<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Winery</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Winery.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital@0;1&family=Playfair+Display&display=swap" rel="stylesheet">

    <style>
        header, footer {
            font-family: 'Lora', serif;
            font-family: 'Playfair Display', serif;
        }

        header {
            backdrop-filter: blur(3px);
            font-size: 18px;
        }

        footer {
            backdrop-filter: blur(3px);
        }
        .navbar-nav{
            justify-content:space-evenly;
        }
        .navbar-nav > li{
            border-style: solid;
            border-width: 1px;
            border-radius: 5px;
        }
    </style>


</head>
<body>
    @RenderBody()
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
